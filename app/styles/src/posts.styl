@import 'variables'
.post
  padding 10px

  background primary-color
  .post-body
    padding 20px
    background secondary-color
    padding-bottom 20px
  header
    border-radius 3px
    background secondary-color
    padding 5px

    .title
      display block
      width 100%
      font normal small-caps 1.4em Times New Roman, sans-serif

      .timestamp
        font-size 0.7em
        font-style italic

    .tags
      clear both
      margin 5px
      font small-caps normal 1.2em Arial
      .tag
        margin 1px
        padding 1px

  .intro
    border-radius 3px
    margin 10px
    padding 5px
    background secondary-color

  .content
    background secondary-color
    margin 5px
    padding 5px


.post-sidebar
  background primary-color
  .tag-listings
    padding 5px

      
